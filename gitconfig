[user]
  name = Daniel Cox
  email = daniel.cox@deciphernow.com
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore
[branch "master"]
  remote = origin
  merge = refs/heads/master
[alias]
  l0g = log --stat=100,200 --decorate
  g = grep --break --heading --line-number
  s = status
  f = fetch --all
  b = branch
  a = add --all
  c = commit -m
  d = diff
  r = rebase
  co = checkout
  sdiff = !git diff && git submodule foreach 'git diff'
  spush = push --recurse-submodules=on-demand
  supdate = submodule update --remote --merge
  st = stash
[push]
  default = simple
[grep]
  extendRegexp = true
  lineNumber = true
[remote "origin"]
  push = HEAD

[merge]
	tool = vimdiff

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[diff]
  submodule = log
[status]
  submodulesummary = 1
[branch]
  autosetuprebase = always
[url "git@github.com:"]
	insteadOf = https://github.com/
